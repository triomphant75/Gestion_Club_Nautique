    <script>
        $('#editClientModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget);
            var id = button.data('id');
            var nom = button.data('nom');
            var prenom = button.data('prenom');
            var adresse = button.data('adresse');
            var email = button.data('email');
            var niveau = button.data('niveau');
            var tel = button.data('tel');
            var date = button.data('date');

            var modal = $(this);
            modal.find('#editNomClient').val(nom);
            modal.find('#editPrenomClient').val(prenom);
            modal.find('#editAdresseClient').val(adresse);
            modal.find('#editEmailClient').val(email);
            modal.find('#editNiveauClient').val(niveau);
            modal.find('#editTelClient').val(tel);
            modal.find('#editDateInscriptionClient').val(date);
            modal.find('#editClientForm').attr('action', '/client/' + id + '/edit');
        });
         // Gestion du modal de suppression
        $('#deleteClientModal').on('show.bs.modal', function (event) {
            var button = $(event.relatedTarget); // Bouton qui a déclenché l'ouverture du modal
            var id = button.data('id'); // Récupère l'ID du client

            var modal = $(this);
            modal.find('#deleteClientForm').attr('action', '/client/' + id); // Met à jour l'action du formulaire
        });

    // Script pour modifier les champs du modal de modification des forfaits
    document.addEventListener('DOMContentLoaded', function () {
        var editForfaitModal = document.getElementById('editForfaitModal');
        if (editForfaitModal) {
            editForfaitModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                document.getElementById('editTypeForfait').value = button.getAttribute('data-type');
                document.getElementById('editNombreSeance').value = button.getAttribute('data-nombre');
                document.getElementById('editDateDebut').value = button.getAttribute('data-debut');
                document.getElementById('editDateExpiration').value = button.getAttribute('data-expiration');
                document.getElementById('editPrixForfait').value = button.getAttribute('data-prix');
                document.getElementById('editPrixRemiseForfait').value = button.getAttribute('data-remise');
            });
        }

        // Script pour afficher les détails de la facture dans le modal
        var viewFactureModal = document.getElementById('viewFactureModal');
        if (viewFactureModal) {
            viewFactureModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                document.getElementById('factureNum').textContent = button.getAttribute('data-num');
                document.getElementById('factureMontant').textContent = button.getAttribute('data-montant');
                document.getElementById('factureDate').textContent = button.getAttribute('data-date');
                document.getElementById('factureAdresse').textContent = button.getAttribute('data-adresse');
            });
        }
    });


    </script>
