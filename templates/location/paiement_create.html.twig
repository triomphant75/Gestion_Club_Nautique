{% extends 'base.html.twig' %}

{% block title %}Paiement pour la Location{% endblock %}

{% block body %}
    <div class="container mt-5">
        <h1 class="mb-4">Paiement pour la Location #{{ location.id }}</h1>

        <p class="lead">Montant total à payer: <strong>{{ montant }} €</strong></p>

        <div class="card">
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
                
                <div class="mb-3">
                    {{ form_row(form.modePaiement) }}
                </div>
                <div class="mb-3">
                    {{ form_row(form.statutPaiement) }}
                </div>

                <button type="submit" class="btn btn-success">Confirmer le paiement</button>
                
                {{ form_end(form) }}
            </div>
        </div>

        <!-- Bouton d'annulation -->
        <form method="POST" action="{{ path('location_paiement_create', {'id': location.id}) }}" class="mt-3">
            <button type="submit" name="cancel" class="btn btn-danger">Annuler le paiement</button>
        </form>
    </div>
{% endblock %}
